{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "declaration": true,
      "removeComments": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "target": "esnext",
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "typeRoots": [
        "node_modules/@types",
        "types"
      ]
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
